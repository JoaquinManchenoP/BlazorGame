<div class="top-menu">
    <img src="/icons/banana.png" />
    <div class="popover-header ">
        @Bananas
    </div>
    <AddBananas BananasAdded="AddBananas" />
</div>



@code {
    [Parameter]
    public int Bananas { get; set; } = 100;

    public void AddBananas(int value)
    {
        Bananas += value;
    }
}
